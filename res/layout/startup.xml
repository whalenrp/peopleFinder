<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:text="Register Your App"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textSize="24dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:text="By registering, a new sync account will be created. You may turn on/off syncing in your Settings panel. Syncing is enabled by default."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dip"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/s_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/label_sync_freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Frequency: auto" />

    <RadioGroup
        android:id="@+id/rg_sync_freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/r_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dip"
            android:checked="true"
            android:text="Auto" />

        <RadioButton
            android:id="@+id/r_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dip"
            android:text="Minute" />

        <RadioButton
            android:id="@+id/r_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour" />
    </RadioGroup>

    <TextView
        android:id="@+id/network_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Type" />

    <RadioGroup
        android:id="@+id/rg_network_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/r_p2p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="21dip"
            android:checked="true"
            android:text="p2p" />

        <RadioButton
            android:id="@+id/r_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dip"
            android:text="Server" />

        <RadioButton
            android:id="@+id/r_mix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mix" />

    </RadioGroup>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register!"
        android:textColor="#FFFFFF" />

</LinearLayout>